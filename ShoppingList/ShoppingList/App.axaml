<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:ShoppingList"
             x:Class="ShoppingList.App"
             RequestedThemeVariant="Light">
  <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

  <Application.DataTemplates>
    <local:ViewLocator/>
  </Application.DataTemplates>
  
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceInclude Source="avares://ShoppingList.Shared/Resources/Colors.axaml"/>
        <ResourceInclude Source="avares://ShoppingList/Resources/lang-en.axaml"/>
        <ResourceInclude Source="avares://ShoppingList.Shared/Resources/lang-en.axaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>

  <Application.Styles>
    <FluentTheme />
    <StyleInclude Source="avares://ShoppingList.Shared/Styles/Icons.axaml"/>
    <StyleInclude Source="avares://ShoppingList.Shared/Styles/Styles.axaml"/>
    <StyleInclude Source="avares://AvaloniaProgressRing/Styles/ProgressRing.xaml"/>
  </Application.Styles>

</Application>